@model IEnumerable<Dataprossing.Models.PopulationAgeGroupInBaishaPenghu>

@{
    ViewData["Title"] = "Index";
    var pervious = 111;
    var next = 105;
    if (Model.Count() != 0)
    {
        pervious = Convert.ToInt32(Model.First().year);
        next = Convert.ToInt32(Model.First().year);
    }
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="Import">Import Datas</a>
</p>
<p>
    <a asp-action="DeleteAll">Delete All Datas</a>
</p>



<form asp-action="Index" method="get" style="margin:16px">
    年度：<input type="text" name="year" />
    <input type="submit" value="搜尋" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                年度
            </th>
            <th>
                月份
            </th>
            <th>
                加總
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.month)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sum)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" asp-route-year="@(pervious - 1)">Pervious</a>
<a asp-action="Index" asp-route-year="@(next + 1)">Next</a>
